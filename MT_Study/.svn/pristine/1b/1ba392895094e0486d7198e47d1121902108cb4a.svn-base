<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/create_new_saved_FlashCard"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignLeft="@+id/FlashCard_CreateAnswerEditText"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/FlashCard_CreateAnswerEditText"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_round_xml"
        android:clickable="true"
        android:text="Save_FlashCard"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/FlashCard_CreateQuestionEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/FlashCardQuestion"
        android:layout_marginTop="40dp"
        android:ems="10" />

    <EditText
        android:id="@+id/FlashCard_CreateAnswerEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/create_new_saved_FlashCard"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:ems="10" />
    
        <TextView
        android:id="@+id/FlashCardAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/FlashCard_CreateAnswerEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="47dp"
        android:text="Answer" />

        <TextView
            android:id="@+id/FlashCardQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="74dp"
            android:text="Question" />

        <View
            android:id="@+id/color_border"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/FlashCard_CreateQuestionEditText"
            android:layout_marginTop="52dp"
            android:background="@android:color/darker_gray" />

</RelativeLayout>