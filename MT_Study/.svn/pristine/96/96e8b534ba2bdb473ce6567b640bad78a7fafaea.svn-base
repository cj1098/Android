<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#ffffff" >
    
<RelativeLayout
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical"
  android:background="#ffffff">
  
  	<Button 
  	    android:enabled="true" 
  	    android:background="@drawable/lbtn_custom"
		android:gravity="center_horizontal|center_vertical"
		android:id="@+id/home_button" 
		android:layout_height="30dp"
		android:layout_width="fill_parent" 
		android:text="MTSU"
		android:textColor="#FFFFFF" />
  
    <TextView 
        android:paddingLeft="5dip" android:paddingRight="5dip" 
	    android:id="@+id/textView1" 
	    android:textColor="#0066cc"
	    android:layout_below="@+id/home_button"
	    android:layout_height="wrap_content" 
	    android:text="Enter your pipeline credentials to import your classes" 
	    android:layout_width="match_parent" 
	    android:paddingTop="10dip"
	    android:focusable= "false" />
    
    <TextView 
        android:paddingLeft="5dip" android:paddingRight="5dip" 
	     android:id="@+id/txtView2" 
	     android:layout_width="wrap_content" 
	     android:layout_height="wrap_content"
	     android:layout_below="@+id/textView1"
	     android:text="Username:" 
	     android:textColor="#0066cc" android:paddingTop="20dip" />

    <EditText 
        android:hint="Pipeline Username" 
        android:layout_margin="5dip" 
        android:id="@+id/inputName" 
        android:inputType="textVisiblePassword" 
        android:layout_below="@+id/txtView2"
        android:layout_height="wrap_content" 
        android:layout_width="match_parent" />
    
    <TextView 
        android:paddingLeft="5dip" 
        android:paddingRight="5dip" 
        android:text="Password:" 
	    android:id="@+id/textView3" 
	    android:layout_below="@+id/inputName"
	    android:layout_width="wrap_content" 
	    android:layout_height="wrap_content"
	    android:textColor="#0066cc" android:paddingTop="10dip" />
    
    <EditText 
        android:hint="Pipeline Password" 
        android:layout_margin="5dip" 
        android:id="@+id/inputPassword" 
        android:layout_below="@+id/textView3" 
        android:inputType="textPassword" 
        android:layout_height="wrap_content" 
        android:layout_width="match_parent" 
        android:layout_marginBottom="10dip" />
    
    <TextView 
        android:id="@+id/termPrompt"
        android:paddingLeft="5dip" 
        android:paddingRight="5dip" 
        android:layout_below="@+id/inputPassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="@string/term_prompt" />
    
    <Spinner 
        android:id="@+id/spinner1" 
    	android:prompt="@string/term_prompt"
	    android:layout_width="match_parent" 
	    android:layout_height="wrap_content" 
	    android:layout_below="@+id/termPrompt"
	    android:contentDescription="Select a course term"
	    android:clickable="true"
	    android:layout_margin="5dip" />
    
    <Button 
        android:layout_height="wrap_content" 
        android:id="@+id/submit" 
        android:layout_below="@+id/spinner1"
        android:clickable="true" 
        android:width="100dip" 
        android:padding="12dip"
        android:layout_margin="5dip"
        android:text="Submit" 
        android:layout_width="wrap_content"
        android:background="@drawable/btn_round_xml"
        android:textColor="#FFFFFF"
        android:onClick="submitClickHandler"/>

    <TextView 
        android:id="@+id/textViewOutput" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"/>

</RelativeLayout>

</ScrollView>