<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
            android:id="@+id/assignment_listClick_Delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/btn_round_xml"
            android:clickable="true"
            android:padding="12dip"
            android:text="@string/assignment_menu_delete_delete"
            android:textColor="#FFFFFF"
            android:width="100dip" />
    
    <Button
            android:id="@+id/assignment_listClick_Edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:background="@drawable/btn_round_xml"
            android:clickable="true"
            android:padding="12dip"
            android:text="@string/assignment_menu_edit"
            android:textColor="#FFFFFF"
            android:width="100dip" />
    
    <Button 
        	android:id="@+id/assignment_set_timer"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_margin="5dip"
        	android:background="@drawable/btn_round_xml"
        	android:clickable="true"
        	android:padding="12dip"
        	android:text="@string/set_assignment_timer"
        	android:textColor="#FFFFFF"
        	android:width="100dip" />
</LinearLayout>